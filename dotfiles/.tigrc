# Show commit SHAs
set main-view-id-display = yes
# Show 10 chars for the SHA
set main-view-id-width = 10
# Custom date format
set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"
# CTRL-F/B to page up and down in diff view
bind diff <Ctrl-f> scroll-page-down
bind diff <Ctrl-b> scroll-page-up
